{
  "name": "orchestra-manager",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:build": "tauri build",
    "tauri:build:wayland": "WEBKIT_DISABLE_COMPOSITING_MODE=1 GDK_BACKEND=x11 tauri build",
    "tauri:build:binary": "WEBKIT_DISABLE_COMPOSITING_MODE=1 GDK_BACKEND=x11 tauri build --no-bundle",
    "build:linux": "npm run build && npm run tauri:build:wayland",
    "build:binary": "npm run build && npm run tauri:build:binary",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:rust": "cd src-tauri && cargo test",
    "test:mcp": "cd mcp-server && npm test",
    "test:mcp:coverage": "cd mcp-server && npm run test:coverage",
    "test:all": "npm run test:run && npm run test:rust && npm run test:mcp",
    "test:all:coverage": "npm run test:coverage && npm run test:rust && npm run test:mcp:coverage",
    "test:watch": "vitest --watch",
    "test:ci": "npm run test:run -- --reporter=verbose --coverage && npm run test:rust && npm run test:mcp",
    "lint": "echo 'Linting not configured yet'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.7.0",
    "@tauri-apps/plugin-dialog": "^2.3.1",
    "@tauri-apps/plugin-opener": "^2",
    "lucide-react": "^0.539.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vitest": "^3.2.4"
  }
}
